<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nexmo.sdk.sample.verifysample">

    <application
            android:name=".SampleApplication"
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckCodeActivity"
            android:label="@string/check_code_fragment_name"
            android:parentActivityName=".MainActivity" >
        </activity>
        <meta-data android:name="com.nexmo.sdk.applicationId" android:value="yourApplicationID" />
        <meta-data android:name="com.nexmo.sdk.sharedSecretKey" android:value="yourSharedSecretKey" />
    </application>

</manifest>
